<% if !score_functionality? %>
    <h4 class="short-margins"><%= rset_f.object.name %> - <%= rset_f.object.distance %></h4>
<% end %>

<section class="rset-form-fields">
    <div class="form-field-group">
        <%= ss_form_input(rset_f, "date", :date, rset_f.object, nil, ("required" if rset_f.object.scoring_started?) ) %>
        <%= ss_form_input(rset_f, "text", :rank, rset_f.object, "Your final place for the set/distance", nil) %>
        
        <% if score_functionality? %>
            <%= tag.p (rset_f.submit "Select Date to Start"), class: "display-horiz" if !rset_f.object.date %>
            <%= tag.p (rset_f.submit "Update Set/Distance"), class: "display-horiz" if rset_f.object.date %>
        <% end %>
    </div>
</section>