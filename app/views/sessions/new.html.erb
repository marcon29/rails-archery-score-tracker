<h1>Log In</h1>

<section>
    <%= form_tag login_path, id: "login-form", class: "user-form" do %>
        <%= text_field_tag :username, nil, class: "form-input-field", placeholder: "Enter your username" %>
        <%= text_field_tag :email, nil, class: "form-input-field", placeholder: "Enter your email" %>
        <%= password_field_tag :password, nil, class: "form-input-field", placeholder: "Enter your password" %>
        <%= submit_tag "Log In" %>
    <% end %>
</section>
